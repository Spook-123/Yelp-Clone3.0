<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yelp_background_2"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvSearchTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Search Term" />

    <EditText
        android:id="@+id/etSearchTerm"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:inputType="text"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/tvSearchTerm"
        app:layout_constraintStart_toStartOf="@id/tvSearchTerm"
        app:layout_constraintTop_toBottomOf="@id/tvSearchTerm"
        android:hint="ex Food"
        android:textColorHint="@color/white"
        />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/etSearchTerm"
        app:layout_constraintStart_toStartOf="@id/etSearchTerm"
        app:layout_constraintTop_toBottomOf="@id/etSearchTerm"
        android:text="Location" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/tvLocation"
        app:layout_constraintStart_toStartOf="@id/tvLocation"
        app:layout_constraintTop_toBottomOf="@id/tvLocation"
        android:hint=" ex New York"
        android:textColorHint="@color/white"
        />


    <Button
        android:id="@+id/btnDone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/etLocation"
        app:layout_constraintEnd_toEndOf="@id/etLocation"
        app:layout_constraintStart_toStartOf="@id/etLocation"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>